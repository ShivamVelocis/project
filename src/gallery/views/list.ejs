<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

    div.gallery:hover {
        border: 1px solid #777;
    }

    div.gallery img {
        width: 100%;
        height: auto;
    }

    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>
<%let itemFun=(item)=>{
    // console.log(item);
    let image_path = '/'+item.image_path.split('/')[2]+"/"+ item.image_path.split('/')[3];
    let imgLink = `${image_path}/${item.image_name}`;
    // console.log(imgLink);
    %>
    <div class="gallery">
        <a target="_blank" href="img_5terre.jpg">
            <img src="<%=imgLink%>" alt="Cinque Terre" width="600" height="400">
        </a>
        <div class="desc">Add a description of the image here</div>
    </div>
    <% }%>

<% images.results.map(itemFun)%>