<% if(messages.loginData){ email=messages.loginData[0].email; password=messages.loginData[0].password; }else{ email='' ;
    password='' ; } %>
    <h2>
        <strong class="mr-auto"><%= module_title %></strong>
    </h2>
    
   
            <div class="card">
                <div class="card-header">
                    <strong class="mr-auto text-primary"><%=title%></strong>
                </div>
                <div class="card-body">
                    
                    <p class="card-text">
                        <% if (messages.success) { %>
                            <div class="alert alert-success" role="alert">
                                <%- messages.success %>
                            </div>
                            <% } %>
                        <% if (messages.error) { %>
                            <div class="alert alert-danger" role="alert">
                                <% Object.keys(messages).forEach(function (type) { if(type=="error" || type=="success"
                                    ){ %>
                                    <ul>
                                        <% messages[type].forEach(function (message) { %>
                                            <li>
                                                <%= message %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                    <% }}) %>
                            </div>
                            <% } %>

                                <div class="row justify-content-center mt-5">
                                    <div class="col-12">
                                        <form name="loginForm" action="/user/auth/login" method="post">
                                            <div class="form-group">
                                                <label for="email"><b>Email</b></label>
                                                <input type="text" class="form-control" id="email" name='email'
                                                    value="<%=email %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="password"><b>Password</b></label>
                                                <input type="password" class="form-control" id="password"
                                                    name='password' value="<%=password %>">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Login</button>
                                            <a href="/user/forgetpassword/" class="link-primary">Forget password</a>
                                        </form>
                                    </div>
                                </div>
                    </p>
                </div>
            </div>
 