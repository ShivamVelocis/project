<% console.log(messages);if (messages.oldUserData == 'uploadfailed') {
   
    imgLink = null;
    } else {
     console.log("i am in else")
     imgLink =`/user/profile/${result._id}`;
     console.log(imgLink)
    } %> 


<h2>
    <%= module_title %>
</h2>
<div class="row justify-content-center">
<div class="card" style="width: 20rem;">
    <div class="card-body">
        <h5 class="card-title">
            <%=title%>
        </h5>

        <% if (messages.success) { %>
            <div class="alert alert-success" role="alert">
                <%- messages.success %>
            </div>
            <% } %>

                <p class="card-text">
                    <% if (messages.error) {%>
                        <div class="alert alert-danger" role="alert">

                            <% Object.keys(messages).forEach(function (type) { if(type=="error" || type=="success" ){ %>

                                <ul class="<%= type %>">
                                    <% messages[type].forEach(function (message) { %>
                                        <li>
                                            <%= message %>
                                        </li>
                                        <% }) %>
                                </ul>

                                <% }}) %>
                        </div>
                        <% } %>

                            <div class="">
                                <form name="addUserFrm" action="/user/upload/profile/<%=result._id %> "
                                    enctype="multipart/form-data" method="POST">
                                    <div class="row">
                                        <div class="col form-group">
                                            <img class="card-img-top" src="<%=imgLink%>" id="image"
                                                alt="Profile picture" width="320" height="240">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col form-group">
                                            <label class="form-label" for="profilepic">Upload Profile Picture</label>
                                            <input type="file" class="form-control" id="profilepic" name="profilepic"
                                                onchange="loadFile(event)" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col form-group">
                                            <label for="" class="col col-form-label"></label>
                                            <div class="col">
                                                <button type="submit" class="btn btn-primary">Upload</button>
                                            </div>
                                        </div>

                                        <div class="col form-group">
                                            <label for="" class="col col-form-label"></label>
                                            <div class="col">

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                </p>
    </div>
</div>
</div>


<script>
    var loadFile = function (event) {
        var image = document.getElementById('image');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>