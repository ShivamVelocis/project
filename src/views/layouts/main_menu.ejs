<div id="main-menu" class="main-menu col-12">
    <nav class="main-menu__nav navbar navbar-expand-sm navbar-dark bg-info">
        <a class="navbar-brand" href="#">
            <img src="/files/images/logo1.png" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample03"
            aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <% if(main_menu){ %>

        <div class="main-menu__navbar collapse navbar-collapse" id="navbarsExample03">
            <ul class="main-menu__item-list navbar-nav mr-auto">
                <li class="main-menu__item nav-item">
                    <a class="nav-link" href="/">
                        Home
                    </a>
                </li>
                <% if( main_menu){%>
                    <% main_menu.map(menu=>{
                        if(menu.menu_status == 1){
                        if(menu.sub_menu && menu.sub_menu.length >0){%>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="/" id="navbardrop" data-toggle="dropdown">
                                <%=menu.menu_title %>
                            </a>
                            <div class="dropdown-menu">
                                <% menu.sub_menu.map(sub_menu=>{%> <a class="dropdown-item"
                                        href="<%=sub_menu.menu_link %>">
                                        <%=sub_menu.menu_title %>
                                    </a>
                                    <%})%>
                            </div>
                        </li>
                        <%}else{%>
                            <li class="main-menu__item nav-item">
                                <a class="nav-link" href="<%=menu.menu_link %>">
                                    <%=menu.menu_title %>
                                </a>
                            </li>

                            <% }}})} %>                               
            </ul>
            <form class="form-inline my-2 my-md-0">
                <input class="form-control" type="text" placeholder="Search">
            </form>
        </div>
    </nav>
</div>