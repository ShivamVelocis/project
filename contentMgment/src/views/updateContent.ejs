<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
    <script>
        function validateForm() {
            let title = document.forms["myForm"]["title"].value;
            let description = document.forms["myForm"]["description"].value;
            // console.log(title, description)
            if (title == "") {
                alert("Title must be filled out");
                return false;
            }
            if (description == "") {
                alert("Description must be filled out");
                return false;
            }
        }

    </script>
    <title>Content Mangement</title>
</head>

<body>
    <div class="container">
        <%- include('partials/NavBar.ejs') %>
        <div class="row justify-content-start">
            <div class="col- offset-md-4">
                <form name="myForm" action="/content/updateContent/<%=oldCont._id%>" onsubmit="return validateForm()"
                    method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name='title' value="<%= oldCont.title%>">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" rows="3"
                            name="description"><%= oldCont.description%></textarea>
                    </div>
                    <button type="submit" class="btn btn-light">Update</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>